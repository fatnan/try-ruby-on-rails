<h1> List of To Do </h1>
<p>
    <%= link_to "Create a To Do", new_todo_path %>
</p>
<table>
    <tr>
        <th>Name</th>
        <th>Description</th>
    </tr>
    <% @todo.each do |todo| %>
        <tr>
            <td><%= todo.name %></td>
            <td><%= todo.description %></td>
            <td><%= link_to "Show", todo_path(todo) %></td>
            <td><%= link_to "Edit", edit_todo_path(todo) %></td>
            <td><%= link_to "Delete", todo_path(todo) ,
                    method: :delete,
                    data: { confirm: 'Delete this to do?' } %></td>
        </tr>
    <% end %>
</table>